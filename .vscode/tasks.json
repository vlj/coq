{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "wsl",
            "args": [
                "make",
                "-j8",
            ],
            "problemMatcher": "$ocamlc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "wsl",
            "args": [
                "bin/coqc",
                "-coqlib",
                ".",
                "addmul.v"
            ]
        }
    ]
}
